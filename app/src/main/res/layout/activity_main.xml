<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="MASUKKAN DUA ANGKA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/et_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Masukkan angka pertama"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_number1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Masukkan angka kedua"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_number2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:text="+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_kurang"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_tambah"
        android:layout_alignBottom="@+id/btn_tambah"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btn_tambah"
        android:layout_toRightOf="@+id/btn_tambah"
        android:text="-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_kali"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_bagi"
        android:layout_alignBottom="@+id/btn_bagi"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/btn_bagi"
        android:layout_toLeftOf="@+id/btn_bagi"
        android:text="X"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_bagi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_bersihkan"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="/"
        android:textSize="24sp" />


    <Button
        android:id="@+id/btn_bersihkan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_tambah"
        android:layout_marginTop="18dp"
        android:text="BERSIHKAN"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_bersihkan"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:text="HASIl"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp" />

</RelativeLayout>